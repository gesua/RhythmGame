<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result">

    <ImageView
        android:id="@+id/iv_result_perfect"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/perfect"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_result_good"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/good"
        app:layout_constraintTop_toBottomOf="@+id/iv_result_perfect"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/iv_result_miss"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/miss"
        app:layout_constraintTop_toBottomOf="@+id/iv_result_good" />

    <ImageView
        android:id="@+id/iv_result_combo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/combo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_result_miss" />

    <ImageView
        android:id="@+id/iv_result_score"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/score"
        app:layout_constraintTop_toBottomOf="@+id/iv_result_combo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_result_perfect"
        app:layout_constraintLeft_toRightOf="@+id/iv_result_perfect">

        <ImageView
            android:id="@+id/iv_result_perfect_num_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_3" />

        <ImageView
            android:id="@+id/iv_result_perfect_num_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_2" />

        <ImageView
            android:id="@+id/iv_result_perfect_num_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_result_good"
        app:layout_constraintLeft_toRightOf="@+id/iv_result_perfect">

        <ImageView
            android:id="@+id/iv_result_good_num_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_3" />

        <ImageView
            android:id="@+id/iv_result_good_num_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_2" />

        <ImageView
            android:id="@+id/iv_result_good_num_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_result_miss"
        app:layout_constraintLeft_toRightOf="@+id/iv_result_perfect">

        <ImageView
            android:id="@+id/iv_result_miss_num_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_3" />

        <ImageView
            android:id="@+id/iv_result_miss_num_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_2" />

        <ImageView
            android:id="@+id/iv_result_miss_num_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_result_combo"
        app:layout_constraintLeft_toRightOf="@+id/iv_result_perfect">

        <ImageView
            android:id="@+id/iv_result_combo_num_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_3" />

        <ImageView
            android:id="@+id/iv_result_combo_num_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_2" />

        <ImageView
            android:id="@+id/iv_result_combo_num_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_result_score"
        app:layout_constraintLeft_toRightOf="@+id/iv_result_perfect">

        <ImageView
            android:id="@+id/iv_result_score_num_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_4" />

        <ImageView
            android:id="@+id/iv_result_score_num_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_3" />

        <ImageView
            android:id="@+id/iv_result_score_num_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_2" />

        <ImageView
            android:id="@+id/iv_result_score_num_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/num_1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_result_clear"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:src="@drawable/game_clear"
        app:layout_constraintBottom_toTopOf="@+id/iv_result_restart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_result_score" />

    <ImageView
        android:id="@+id/iv_result_restart"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_result_back" />

    <ImageView
        android:id="@+id/iv_result_back"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_result_restart"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>