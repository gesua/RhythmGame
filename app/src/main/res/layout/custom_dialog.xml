<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/layout_option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:src="@drawable/option_title" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/option_icon" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_option_frame_1"
        android:layout_width="320dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/option_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_option_title" />

    <ImageView
        android:id="@+id/iv_option_speed"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/option_speed"
        app:layout_constraintLeft_toLeftOf="@+id/iv_option_frame_1"
        app:layout_constraintTop_toTopOf="@+id/iv_option_frame_1" />

    <ImageView
        android:id="@+id/backimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/button_left"
        app:layout_constraintLeft_toLeftOf="@+id/iv_option_frame_1"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_speed" />

    <EditText
        android:id="@+id/spd_edit"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backimg"
        app:layout_constraintLeft_toRightOf="@+id/backimg"
        app:layout_constraintRight_toLeftOf="@+id/forimg"
        app:layout_constraintTop_toTopOf="@+id/backimg" />

    <ImageView
        android:id="@+id/forimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_right"
        app:layout_constraintRight_toRightOf="@+id/iv_option_frame_1"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_speed" />

    <ImageView
        android:id="@+id/iv_option_frame_2"
        android:layout_width="320dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/option_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_frame_1" />

    <ImageView
        android:id="@+id/iv_option_sink"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/option_sink"
        app:layout_constraintLeft_toLeftOf="@+id/iv_option_frame_2"
        app:layout_constraintTop_toTopOf="@+id/iv_option_frame_2" />

    <ImageView
        android:id="@+id/backimg2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/button_left"
        app:layout_constraintLeft_toLeftOf="@+id/iv_option_frame_2"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_sink" />

    <EditText
        android:id="@+id/sync_edit2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backimg2"
        app:layout_constraintLeft_toRightOf="@+id/backimg2"
        app:layout_constraintRight_toLeftOf="@+id/forimg2"
        app:layout_constraintTop_toTopOf="@+id/backimg2" />

    <ImageView
        android:id="@+id/forimg2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_right"
        app:layout_constraintRight_toRightOf="@+id/iv_option_frame_2"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_sink" />

    <Button
        android:id="@+id/ok"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_option_apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ok2" />

    <Button
        android:id="@+id/ok2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_option_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ok"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>