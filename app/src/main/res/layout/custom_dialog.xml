<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="250dp"
    android:minWidth="350dp">

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/spd_edit"
        android:singleLine="true"
        android:lines="1"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/backimg"
        app:layout_constraintBottom_toBottomOf="@id/backimg"
        app:layout_constraintLeft_toLeftOf="@id/spd_title"
        app:layout_constraintRight_toRightOf="@id/spd_title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="속도 조절(기본5, 1~15)"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:id="@+id/spd_title"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/spd_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:background="@drawable/mi"
        android:id="@+id/backimg"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/spd_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:background="@drawable/pl"
        android:id="@+id/forimg"
        />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="취소"
    android:id="@+id/ok2"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@id/sync_edit2"
    app:layout_constraintRight_toLeftOf="@id/ok"
    app:layout_constraintLeft_toLeftOf="parent"/>



    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/sync_edit2"
        android:singleLine="true"
        android:lines="1"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/backimg2"
        app:layout_constraintBottom_toBottomOf="@id/backimg2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="싱크 조절(기본6, 1~12)"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/spd_edit"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:id="@+id/sync_title"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/sync_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:background="@drawable/mi"
        android:id="@+id/backimg2"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/sync_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:background="@drawable/pl"
        android:id="@+id/forimg2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/ok"
        app:layout_constraintTop_toTopOf="@id/ok2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ok2"
   />



</android.support.constraint.ConstraintLayout>